@model Crud.Models.Carro

@{
    ViewBag.Title = "Cadastrar Carro";
}

<div class="container">
    <h2 class="text-center text-primary">Cadastrar Novo Carro</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
           
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4 class="text-primary">Informações do Carro</h4>
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Modelo, htmlAttributes: new { @class = "control-label font-weight-bold" }) 
                        @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control", style = "font-size: 1.2rem; height: 45px;", placeholder = "Digite o modelo do carro" } })
                        @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DataFabricacao, htmlAttributes: new { @class = "control-label font-weight-bold" })
                        @Html.EditorFor(model => model.DataFabricacao, new { htmlAttributes = new { @class = "form-control", style = "font-size: 1.2rem; height: 45px;", placeholder = "Digite a data de fabricação" } })
                        @Html.ValidationMessageFor(model => model.DataFabricacao, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AnoModelo, htmlAttributes: new { @class = "control-label font-weight-bold" })
                        @Html.EditorFor(model => model.AnoModelo, new { htmlAttributes = new { @class = "form-control", style = "font-size: 1.2rem; height: 45px;", placeholder = "Digite o ano do modelo" } })
                        @Html.ValidationMessageFor(model => model.AnoModelo, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Consumo, htmlAttributes: new { @class = "control-label font-weight-bold" })
                        @Html.EditorFor(model => model.Consumo, new { htmlAttributes = new { @class = "form-control", style = "font-size: 1.2rem; height: 45px;", placeholder = "Digite o consumo (km/l)" } })
                        @Html.ValidationMessageFor(model => model.Consumo, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.QuantidadePortas, htmlAttributes: new { @class = "control-label font-weight-bold" })
                        @Html.EditorFor(model => model.QuantidadePortas, new { htmlAttributes = new { @class = "form-control", style = "font-size: 1.2rem; height: 45px;", placeholder = "Digite a quantidade de portas" } })
                        @Html.ValidationMessageFor(model => model.QuantidadePortas, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.QuantidadePassageiros, htmlAttributes: new { @class = "control-label font-weight-bold" })
                        @Html.EditorFor(model => model.QuantidadePassageiros, new { htmlAttributes = new { @class = "form-control", style = "font-size: 1.2rem; height: 45px;", placeholder = "Digite a quantidade de passageiros" } })
                        @Html.ValidationMessageFor(model => model.QuantidadePassageiros, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Categoria, htmlAttributes: new { @class = "control-label font-weight-bold" })
                        @Html.EditorFor(model => model.Categoria, new { htmlAttributes = new { @class = "form-control", style = "font-size: 1.2rem; height: 45px;", placeholder = "Digite a categoria (ex: Sedan, SUV, etc.)" } })
                        @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
                    </div>

                    <hr /> 

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success btn-lg">Salvar</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">Cancelar</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
